<%- include('../includes/mentorHeader.ejs') %>
    <div class="iq-navbar-header" style="height: 215px;">
        <div class="container-fluid iq-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="flex-wrap d-flex justify-content-between align-items-center">
                        <div>
                            <h1>Hello <%= user.fName %>!</h1>
                            <p>We are on a mission to help studnets build their dreams.</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="iq-header-img">
            <img src="../../assets/images/dashboard/top-header.png" alt="header"
                class="theme-color-default-img img-fluid w-100 h-100 animated-scaleX">
            <img src="../../assets/images/dashboard/top-header1.png" alt="header"
                class="theme-color-purple-img img-fluid w-100 h-100 animated-scaleX">
            <img src="../../assets/images/dashboard/top-header2.png" alt="header"
                class="theme-color-blue-img img-fluid w-100 h-100 animated-scaleX">
            <img src="../../assets/images/dashboard/top-header3.png" alt="header"
                class="theme-color-green-img img-fluid w-100 h-100 animated-scaleX">
            <img src="../../assets/images/dashboard/top-header4.png" alt="header"
                class="theme-color-yellow-img img-fluid w-100 h-100 animated-scaleX">
            <img src="../../assets/images/dashboard/top-header5.png" alt="header"
                class="theme-color-pink-img img-fluid w-100 h-100 animated-scaleX">
        </div>
    </div> <!-- Nav Header Component End -->
    <!--Nav End-->
    </div>
    <div class="conatiner-fluid content-inner mt-n5 py-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">My Mentees</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="datatable" class="table table-striped" data-toggle="data-table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>SAP ID</th>
                                        <th>Email</th>
                                        <th>Contact</th>
                                        <th>Passing Year</th>
                                        <th>Pending Requests</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% myMentees.forEach((mentee)=>{ %>
                                        <tr>

                                            <td><img class="rounded img-fluid avatar-40 me-3 bg-primary-subtle"
                                                    src="<%= mentee.profileImageLink %>" alt="profile">
                                                <%= mentee.name %>
                                                    <%= mentee.lName %>
                                            </td>
                                            <td>
                                                <%= mentee.sapId %>
                                            </td>
                                            <td>
                                                <%= mentee.email %>
                                            </td>
                                            <td>
                                                <%= mentee.contactNumber %>
                                            </td>
                                            <td>
                                                <%= mentee.graduationYear %>
                                            </td>
                                            <td style="color: red">
                                                <%= 1 %>
                                            </td>

                                            <td><a href="/mentee-profile/<%= mentee._id %>"><button
                                                        class="btn btn-primary">View profile</button></a></td>
                                        </tr>

                                        <% }) %>


                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>SAP ID</th>
                                        <th>Email</th>
                                        <th>Class</th>
                                        <th>Passing Year</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/studentFooter') %>