<%- include('./includes/studentHeader') %>

<div class="iq-navbar-header" style="height: 215px;">
    <div class="container-fluid iq-container">
        <div class="row">
            <div class="col-md-12">
                <div class="flex-wrap d-flex justify-content-between align-items-center">
                    <div>
                        <h1>My Profile</h1>
                        <p>View and update your profile information</p>
                    </div>
                    <div>
                        <a href="#" class="btn btn-link btn-soft-light">
                            <svg width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon-20">
                                <path d="M11.997 15.1746C7.684 15.1746 4 15.8546 4 18.5746C4 21.2956 7.661 21.9996 11.997 21.9996C16.31 21.9996 19.994 21.3206 19.994 18.5996C19.994 15.8786 16.334 15.1746 11.997 15.1746Z" fill="currentColor"></path>
                                <path opacity="0.4" d="M11.9971 12.5838C14.9351 12.5838 17.2891 10.2288 17.2891 7.29176C17.2891 4.35476 14.9351 1.99976 11.9971 1.99976C9.06008 1.99976 6.70508 4.35476 6.70508 7.29176C6.70508 10.2288 9.06008 12.5838 11.9971 12.5838Z" fill="currentColor"></path>
                            </svg>
                            Student Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="conatiner-fluid content-inner mt-n5 py-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap align-items-center justify-content-between">
                        <div class="d-flex flex-wrap align-items-center">
                            <div class="profile-img position-relative me-3 mb-3 mb-lg-0 profile-logo profile-logo1">
                                <img src="<%= user?.profileImageLink || '/assets/images/avatars/01.png' %>" alt="User-Profile" class="theme-color-default-img img-fluid rounded-pill avatar-100">
                            </div>
                            <div class="d-flex flex-wrap align-items-center mb-3 mb-sm-0">
                                <h4 class="me-2 h4"><%= user?.fName || 'Student' %> <%= user?.lName || '' %></h4>
                                <span class="badge bg-success">Student</span>
                            </div>
                        </div>
                        <ul class="d-flex nav nav-pills mb-0 text-center profile-tab" data-toggle="slider-tab" id="profile-pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active show" data-bs-toggle="tab" href="#profile-feed" role="tab" aria-selected="false">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#profile-activity" role="tab" aria-selected="false">Edit Profile</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="tab-content" id="profile-tabContent">
                <div class="tab-pane fade active show" id="profile-feed" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <div class="header-title">
                                        <h4 class="card-title">Personal Information</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="text-center">
                                        <div class="user-profile">
                                            <img src="<%= user?.profileImageLink || '/assets/images/avatars/01.png' %>" alt="profile-img" class="rounded-pill avatar-130 img-fluid">
                                        </div>
                                        <div class="mt-3">
                                            <h3 class=""><%= user?.fName || 'Student' %> <%= user?.lName || '' %></h3>
                                            <p class="d-inline-block pl-3"><%= user?.email || 'student@example.com' %></p>
                                            <p class="mb-0"><%= user?.course || 'Computer Science' %>, <%= user?.department || 'IT Department' %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <div class="header-title">
                                        <h4 class="card-title">Contact Information</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-borderless mb-0">
                                            <tbody>
                                                <tr>
                                                    <td class="text-start">Email:</td>
                                                    <td><%= user?.email || 'student@example.com' %></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-start">Phone:</td>
                                                    <td><%= user?.contactNumber || 'Not provided' %></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-start">Address:</td>
                                                    <td><%= user?.address || 'Not provided' %>, <%= user?.city || '' %></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-start">LinkedIn:</td>
                                                    <td><a href="<%= user?.linkedInProfileLink || '#' %>" target="_blank"><%= user?.linkedInProfileLink ? 'View Profile' : 'Not provided' %></a></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-start">GitHub:</td>
                                                    <td><a href="<%= user?.gitHubProfileLink || '#' %>" target="_blank"><%= user?.gitHubProfileLink ? 'View Profile' : 'Not provided' %></a></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-start">Portfolio:</td>
                                                    <td><a href="<%= user?.portfolioLink || '#' %>" target="_blank"><%= user?.portfolioLink ? 'View Portfolio' : 'Not provided' %></a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <div class="header-title">
                                        <h4 class="card-title">Academic Information</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <h6>SAP ID</h6>
                                            <p><%= user?.sapId || 'Not provided' %></p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <h6>CGPA</h6>
                                            <p><%= user?.CGPA || 'Not provided' %></p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <h6>Enrollment Year</h6>
                                            <p><%= user?.enrollmentYear || 'Not provided' %></p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <h6>Graduation Year</h6>
                                            <p><%= user?.graduationYear || 'Not provided' %></p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <h6>Course</h6>
                                            <p><%= user?.course || 'Not provided' %></p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <h6>Department</h6>
                                            <p><%= user?.department || 'Not provided' %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <div class="header-title">
                                        <h4 class="card-title">Skills</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <% if (user?.skills && user.skills.length > 0) { %>
                                        <% user.skills.forEach(function(skill) { %>
                                            <span class="badge bg-primary me-2 mb-2"><%= skill %></span>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No skills listed yet</p>
                                    <% } %>
                                    
                                    <h5 class="mt-4">Skills Interested to Learn</h5>
                                    <% if (user?.skillsInterestedToLearn && user.skillsInterestedToLearn.length > 0) { %>
                                        <% user.skillsInterestedToLearn.forEach(function(skill) { %>
                                            <span class="badge bg-info me-2 mb-2"><%= skill %></span>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No skills listed yet</p>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <div class="header-title">
                                        <h4 class="card-title">Experience & Achievements</h4>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5>Experience</h5>
                                    <% if (user?.experience) { %>
                                        <p><strong>Years:</strong> <%= user.experience.numberOfYears || 'Not provided' %></p>
                                        <p><strong>Company:</strong> <%= user.experience.company || 'Not provided' %></p>
                                    <% } else { %>
                                        <p>No experience listed yet</p>
                                    <% } %>
                                    
                                    <h5 class="mt-3">Achievements</h5>
                                    <% if (user?.achievements && user.achievements.length > 0) { %>
                                        <ul>
                                        <% user.achievements.forEach(function(achievement) { %>
                                            <li><%= achievement %></li>
                                        <% }); %>
                                        </ul>
                                    <% } else { %>
                                        <p>No achievements listed yet</p>
                                    <% } %>
                                    
                                    <h5 class="mt-3">Certificates</h5>
                                    <% if (user?.certificates && user.certificates.length > 0) { %>
                                        <ul>
                                        <% user.certificates.forEach(function(certificate) { %>
                                            <li><%= certificate %></li>
                                        <% }); %>
                                        </ul>
                                    <% } else { %>
                                        <p>No certificates listed yet</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile-activity" role="tabpanel">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Edit Profile</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/update-student-profile">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="name" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="name" name="name" value="<%= user?.name || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lName" class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="lName" name="lName" value="<%= user?.lName || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="<%= user?.email || '' %>" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="contactNumber" class="form-label">Contact Number</label>
                                        <input type="text" class="form-control" id="contactNumber" name="contactNumber" value="<%= user?.contactNumber || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="address" class="form-label">Address</label>
                                        <input type="text" class="form-control" id="address" name="address" value="<%= user?.address || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="city" class="form-label">City</label>
                                        <input type="text" class="form-control" id="city" name="city" value="<%= user?.city || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="gender" class="form-label">Gender</label>
                                        <select class="form-select" id="gender" name="gender">
                                            <option value="Male" <%= user?.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                            <option value="Female" <%= user?.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                            <option value="Other" <%= user?.gender === 'Other' ? 'selected' : '' %>>Other</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value="<%= user?.dateOfBirth ? new Date(user.dateOfBirth).toISOString().split('T')[0] : '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="sapId" class="form-label">SAP ID</label>
                                        <input type="text" class="form-control" id="sapId" name="sapId" value="<%= user?.sapId || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="enrollmentYear" class="form-label">Enrollment Year</label>
                                        <input type="number" class="form-control" id="enrollmentYear" name="enrollmentYear" value="<%= user?.enrollmentYear || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="graduationYear" class="form-label">Graduation Year</label>
                                        <input type="number" class="form-control" id="graduationYear" name="graduationYear" value="<%= user?.graduationYear || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="course" class="form-label">Course</label>
                                        <input type="text" class="form-control" id="course" name="course" value="<%= user?.course || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="department" class="form-label">Department</label>
                                        <input type="text" class="form-control" id="department" name="department" value="<%= user?.department || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="CGPA" class="form-label">CGPA</label>
                                        <input type="number" step="0.01" class="form-control" id="CGPA" name="CGPA" value="<%= user?.CGPA || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="skills" class="form-label">Skills (Comma separated)</label>
                                        <input type="text" class="form-control" id="skills" name="skills" value="<%= user?.skills ? user.skills.join(', ') : '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="skillsInterestedToLearn" class="form-label">Skills Interested to Learn (Comma separated)</label>
                                        <input type="text" class="form-control" id="skillsInterestedToLearn" name="skillsInterestedToLearn" value="<%= user?.skillsInterestedToLearn ? user.skillsInterestedToLearn.join(', ') : '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="linkedInProfileLink" class="form-label">LinkedIn Profile Link</label>
                                        <input type="url" class="form-control" id="linkedInProfileLink" name="linkedInProfileLink" value="<%= user?.linkedInProfileLink || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="gitHubProfileLink" class="form-label">GitHub Profile Link</label>
                                        <input type="url" class="form-control" id="gitHubProfileLink" name="gitHubProfileLink" value="<%= user?.gitHubProfileLink || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="portfolioLink" class="form-label">Portfolio Link</label>
                                        <input type="url" class="form-control" id="portfolioLink" name="portfolioLink" value="<%= user?.portfolioLink || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="resumeLink" class="form-label">Resume Link</label>
                                        <input type="url" class="form-control" id="resumeLink" name="resumeLink" value="<%= user?.resumeLink || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="programmingPlatformLink" class="form-label">Programming Platform Link</label>
                                        <input type="url" class="form-control" id="programmingPlatformLink" name="programmingPlatformLink" value="<%= user?.programmingPlatformLink || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="certificates" class="form-label">Certificates (Comma separated)</label>
                                        <input type="text" class="form-control" id="certificates" name="certificates" value="<%= user?.certificates ? user.certificates.join(', ') : '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="achievements" class="form-label">Achievements (Comma separated)</label>
                                        <input type="text" class="form-control" id="achievements" name="achievements" value="<%= user?.achievements ? user.achievements.join(', ') : '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="preferredJobRole" class="form-label">Preferred Job Role</label>
                                        <input type="text" class="form-control" id="preferredJobRole" name="preferredJobRole" value="<%= user?.preferredJobRole || '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="preferredJobLocation" class="form-label">Preferred Job Location</label>
                                        <input type="text" class="form-control" id="preferredJobLocation" name="preferredJobLocation" value="<%= user?.preferredJobLocation || '' %>">
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="isHigherStudies" name="isHigherStudies" <%= user?.isHigherStudies ? 'checked' : '' %>>
                                            <label class="form-check-label" for="isHigherStudies">
                                                Interested in Higher Studies
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Update Profile</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./includes/studentFooter') %>
